@model IEnumerable<ASP_SpringLibrary.Models.Editora>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Novo", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idEdit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomEdit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.celEdit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emailEdit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idEdit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomEdit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.celEdit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emailEdit)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id=item.idEdit })
        </td>
    </tr>
}

</table>
