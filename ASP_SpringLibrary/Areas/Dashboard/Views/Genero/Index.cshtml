@model IEnumerable<ASP_SpringLibrary.Models.Genero>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
@Styles.Render("~/Content/CadLiv.css")

<h2>Todos os Gêneros</h2>

<p>
    @Html.ActionLink("Cadastrar Novo", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.nomGen)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idGen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomGen)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id = item.idGen })
            </td>
        </tr>
    }

</table>
