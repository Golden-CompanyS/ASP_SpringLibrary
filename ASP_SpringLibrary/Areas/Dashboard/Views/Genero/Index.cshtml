@model IEnumerable<ASP_SpringLibrary.Models.Genero>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Novo", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idGen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomGen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idGen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomGen)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id=item.idGen })
        </td>
    </tr>
}

</table>
