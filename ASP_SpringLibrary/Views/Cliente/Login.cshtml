@model ASP_SpringLibrary.ViewModels.Cliente.LoginClienteViewModel

@{
    ViewBag.Title = "Login";
}
@Styles.Render("~/Content/userLogin.css")

<aside>
    <img src="../../Photos/aside-image.png" />
</aside>
<div id="filler"></div>
<div class="formContainer">
    <img src="../../Photos/logo.png" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.urlRetorno) <!-- ID 0 escondido para passar à Controller -->

        @Html.DisplayNameFor(model => model.emailCli)
        @Html.EditorFor(model => model.emailCli, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.emailCli, "", new { @class = "text-danger" })
        <br />
        @Html.DisplayNameFor(model => model.senhaCli)
        @Html.EditorFor(model => model.senhaCli, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.senhaCli, "", new { @class = "text-danger" })
        <br />
        <div id="formEnd">
            <a href="@Url.Action("Cadastro")">Não possui cadastro?</a>
            <br>
            <input type="submit" value="Entrar" class="btn" />
        </div>

    }
</div>