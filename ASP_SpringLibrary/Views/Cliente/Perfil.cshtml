@model ASP_SpringLibrary.ViewModels.Cliente.CadastroClienteViewModel

@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
@Styles.Render("~/Content/user.css")

<h2>Suas Informações</h2>

<div class="container">
    <center>
        <img src="../Photos/user2.png" alt="usuario">
    </center>

    <div class="info">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.nomCli)</th>
                    <td>@Html.DisplayFor(model => model.nomCli)</td>
                </tr>

                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.emailCli)</th>
                    <td>@Html.DisplayFor(model => model.emailCli)</td>
                </tr>

                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.celCli)</th>
                    <td>@Html.DisplayFor(model => model.celCli)</td>
                </tr>

                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.CEPCli)</th>
                    <td>@Html.DisplayFor(model => model.CEPCli)</td>
                </tr>

                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.numEndCli)</th>
                    <td>@Html.DisplayFor(model => model.numEndCli)</td>
                </tr>

                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.compEndCli)</th>
                    <td>@Html.DisplayFor(model => model.compEndCli)</td>
                </tr>

                @if (ViewData["isFunc"].ToString().AsBool())
                {
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => model.CNPJCliJ)</th>

                        <td>
                            @Html.DisplayFor(model => model.CNPJCliJ)
                        </td>
                    </tr>

                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.fantaCliJ)
                        </th>

                        <td>
                            @Html.DisplayFor(model => model.fantaCliJ)
                        </td>
                    </tr>

                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.represCliJ)
                        </th>

                        <td>
                            @Html.DisplayFor(model => model.represCliJ)
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.CPFCliF)
                        </th>

                        <td>
                            @Html.DisplayFor(model => model.CPFCliF)
                        </td>
                    </tr>

                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.dtNascCliF)
                        </th>

                        <td>
                            @Html.DisplayFor(model => model.dtNascCliF)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <div class="links">
        <p>@Html.ActionLink("Alterar", "Alterar")</p>
        <p>@Html.ActionLink("Meus Pedidos", "Pedidos")</p>
    </div>
    
    <center>
        <a href="@Url.Action("Logout", "Cliente", new { Area = "" })"><button class="btn btn-lg">Sair</button></a>
    </center>
</div>
